#version 330

// location 0번째로 지정된 vertex position 정보
layout(location = 0) in vec4 position;

// location 1번째로 지정된 color 정보
layout(location = 1) in vec3 color;

// location 2번째로 지정된 texture 정보
layout(location = 2) in vec2 texCoord;

// fragment shader에게 전달할 output
out vec3 v_Color;
out vec2 v_TexCoord;

void main(){

    // gl_Position은 최종적으로 clip space의 값이 지정되어야 함.
    gl_Position = position;
    
    v_Color = color; // fragment shader로 값을 넘긴다.
    v_TexCoord = texCoord;

}
